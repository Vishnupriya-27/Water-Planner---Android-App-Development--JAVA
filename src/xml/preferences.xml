<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/preference"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditTextPreference
        android:dialogTitle="Your Cup Size(ml)"
        android:defaultValue="80"
        android:key="container_size"
        android:title="Your Cup Size"
        android:dialogLayout="@layout/preference_edit_text"
        />
    <EditTextPreference
        android:dialogTitle="Intake Amount(ml)"
        android:defaultValue="80"
        android:key="goal"
        android:title="Intake"
        android:dialogLayout="@layout/preference_edit_text"
        />

    <SwitchPreference
        android:key="switch"
        android:title="Reminders"
        android:summary="Click to switch on or off"
        android:defaultValue="true"/>

</androidx.preference.PreferenceScreen>